@model IEnumerable<RmosCrmWebApp.Models.EntityClasses.Departmanlar>

@{
    SelectList subeler = ViewBag.SubeID as SelectList;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hover Rows -->
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div id="alert_area"></div>
            <div class="header">
                <h2 class="col-sm-11">
                    DEPARTMANLAR
                    <small>Otel Departmanları</small>
                </h2>
                <div class="col-sm-1">
                    <a href="@Url.Action("Create","Departments")" class="btn btn-success btn-circle  waves-effect waves-circle waves-float"><i class="material-icons">add</i></a>
                </div>
                <hr />
            </div>
            <div class="body">
                <h4 class="text-danger">@ViewBag.deleteresult</h4>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Departman Kodu</th>
                            <th>Departman Adı</th>
                            <th>Şube</th>
                            <th>Aktiflik</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var dep in Model)
                        {
                            <tr>
                                <td class="col-sm-2">@dep.DepartmanKod</td>
                                <td class="col-sm-2">@dep.Ad</td>
                                <td class="col-sm-2">@(subeler.FirstOrDefault(x=> x.Value == dep.SubeID.ToString()).Text)</td>
                                <td class="col-sm-2">@(dep.Aktiflik==true?"Aktif":"Pasif")</td>
                                <td class="col-sm-1"><a href="@Url.Action("Edit","Departments",new {id= dep.DepartmanID })" class="btn btn-warning btn-circle waves-effect waves-circle waves-float"><i class="material-icons">edit</i></a></td>
                                <td class="col-sm-1"><a href="@Url.Action("Delete","Departments",new {id= dep.DepartmanID })" onclick="return confirm('Seçtiğiniz öğe silinecek! Emin misiniz?')" class="btn btn-danger btn-circle waves-effect waves-circle waves-float"><i class="material-icons">delete</i></a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- #END# Hover Rows -->