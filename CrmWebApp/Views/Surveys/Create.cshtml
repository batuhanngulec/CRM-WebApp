    <!-- Dropzone Plugin Js -->
    <script src="/Content/plugins/dropzone/dropzone.js"></script>

    <!-- Input Mask Plugin Js -->
    <script src="/Content/plugins/jquery-inputmask/jquery.inputmask.bundle.js"></script>

    <!-- Multi Select Plugin Js -->
    <script src="/Content/plugins/multi-select/js/jquery.multi-select.js"></script>

    <!-- Select Plugin Js -->
    <script src="/Content/plugins/bootstrap-select/js/bootstrap-select.js"></script>

    <!-- Jquery Spinner Plugin Js -->
    <script src="/Content/plugins/jquery-spinner/js/jquery.spinner.js"></script>

    <!-- Bootstrap Tags Input Plugin Js -->
    <script src="/Content/plugins/bootstrap-tagsinput/bootstrap-tagsinput.js"></script>
    <script src="~/Scripts/js/Custom/create-survey.js"></script>

