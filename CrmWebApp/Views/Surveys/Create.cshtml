@model RmosCrmWebApp.Models.EntityClasses.Anketler

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    ANKET OLUŞTUR
                    <small>ANKET OLUŞTUR EXAMPLE1</small>
                </h2>
            </div>
            <div class="body">
                <div class="form-group">
                    <div class="form-label">
                        <label class="form-label">Anket adı:</label>
                        <div class="form-line">
                            <input class="form-control" type="text" name="name" value="" placeholder="Ankete isim verin..." />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-label">Anket Tipi:</label>
                    @Html.DropDownList("Anket Tipleri", (SelectList)ViewBag.SurveyTypes, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label class="form-label">Şube:</label>
                    @Html.DropDownList("Anket Şubeleri", (SelectList)ViewBag.Branches, new { @class = "form-control" })
                </div>
            </div>
        </div>
    </div>
</div>




<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>ADVANCED FORM EXAMPLE WITH VALIDATION</h2>
            </div>
            <div class="body">
                <form id="wizard_with_validation" method="POST">
                    <h3>Ankette Hangi Departmanlar Bulunacak?</h3>
                    <fieldset>
                        <div class="form-group form-float">
                            <div class="form-line">
                                <select id="deps" name="deps" class="form-control show-tick" data-show-subtext="true" multiple="multiple" required>
                                    @foreach (var departman in (ViewBag.Departments as IEnumerable<RmosCrmWebApp.Models.EntityClasses.Departmanlar>))
                                    {
                                        <option data-subtext="(@((ViewBag.Branches as SelectList).Where(x=> x.Value == departman.SubeID.ToString()).FirstOrDefault().Text))">@departman.Ad</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </fieldset>

                    <h3>Departman soruları neler olacak?</h3>
                    <fieldset>
                        <div class="form-group form-float">
                            
                            <div class="align-center ">
                                <select id="questions" name="questions" class=" show-tick col-md-5" multiple="multiple">
                                    @foreach (var question in (SelectList)ViewBag.Questions)
                                    {
                                        <option data-subtext="Şube">@question.Text</option>
                                    }
                                </select>
                                <select id="questions" name="questions" class=" show-tick col-md-6" multiple="multiple" required>
                                    @foreach (var question in (SelectList)ViewBag.AnswerSets)
                                    {
                                        <option data-subtext="Soru Setleri">@question.Text</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <button type="button" class="btn bg-teal btn-block waves-effect">INDIGO</button>
                        <hr />
                        <hr />
                        <p align="right">
                            <input type="submit" value="KAYDET" class="button" />
                        </p>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- #END# Advanced Form Example With Validation -->
