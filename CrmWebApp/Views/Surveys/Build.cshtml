@model RmosCrmWebApp.Models.EntityClasses.Anketler

@{
    ViewBag.Title = "Build";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int depCounter = 0;
}

<div class="row clearfix" id="sube">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    <label> Şube Listesi</label>
                    <small></small>
                </h2>
            </div>
            <div class="body">
                <div class="form-group">
                    <div class="form-line">
                        @Html.DropDownList("sube", (SelectList)ViewBag.Branches, new { @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    <label>Departman Listesi</label>
                    <small></small>
                </h2>
            </div>
            <div class="body">
                @*<label>Departman Listesi</label>*@
                @foreach (var departman in (ViewBag.Departments as IEnumerable<RmosCrmWebApp.Models.EntityClasses.Departmanlar>))
                {
                    <div class="">
                        <input type="checkbox" id="md_checkbox_@depCounter" class="filled-in chk-col-black" />
                        <label for="md_checkbox_@depCounter">@departman.Ad</label>
                    </div>
                    depCounter++;
                }

            </div>
        </div>
    </div>
</div>

<div class="row clearfix" id="department-name">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    <label>SORULAR</label>
                    <small></small>
                </h2>
            </div>
            <div class="body">
                <div class="form-group form-float" id="body">
                    <div class="form-group">
                        <select class="form-control" id="questionSelect">
                            <option value="value">GULERYUZ</option>
                            <option value="value">TEMIZLIK</option>
                            <option value="value">DIL</option>
                        </select>
                        <button type="button" onclick="removeSelectedQuestion()" class="btn bg-teal btn-block waves-effect">Ekle</button>
                    </div>
                    <div class="form-group" id="entry" hidden>
                        <div class="form-line">
                            <input class="form-control" type="text" id="question" name="question" value="" placeholder="test" disabled />
                        </div>
                        <br />
                        <div class="form-line">
                            @Html.DropDownList("answer", (SelectList)ViewBag.Sets, new { @class = "form-control" })
                        </div>
                        <div class=" align-center">
                            <br />
                            <button onclick="buttonDelete($(this))" class="btn bg-red form-control waves-effect" style="width:25%">Kaldır</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>






@section page_script{
    <script src="/Content/plugins/multi-select/js/jquery.multi-select.js"></script>
    <script src="~/Scripts/js/Custom/create-survey.js"></script>
}
@section scripts{
    <script src="~/Scripts/js/Custom/survey-steps.js"></script>
}



