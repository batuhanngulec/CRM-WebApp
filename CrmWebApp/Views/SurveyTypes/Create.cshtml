@model RmosCrmWebApp.Models.EntityClasses.AnketTipleri
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    YENİ ANKET TİPLERİ
                    <small>Oluştur</small>
                </h2>
            </div>
            <div class="body">
                <div class="row clearfix">
                    <div class="col-sm-12">
                        @using (Html.BeginForm("Create", "SurveyTypes", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <label class="control-label">Anket Tip Kodu:</label>
                                <div class="form-line">
                                    @Html.EditorFor(model => model.AnketTipKod, new { htmlAttributes = new { @class = "form-control", required = "required", maxlength = "100" } })
                                    @Html.ValidationMessageFor(model => model.AnketTipKod, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            @*<div class="form-group">
                                <div class="form-line">

                                    <label class="control-label">Adı:</label>
                                    @Html.EditorFor(model => model.Ad, new { htmlAttributes = new { @class = "form-control", required = "required", maxlength = "50" } })
                                    @Html.ValidationMessageFor(model => model.Ad, "", new { @class = "text-danger" })
                                </div>
                            </div>*@

                            <div class="form-group">
                                <div class="form-line">
                                    <label class="control-label">Adı: </label>
                                    @Html.DropDownListFor(model => model.Ad, (SelectList)ViewBag.AnketTipAd, new { @class = "form-control", required = "required" })
                                    @Html.ValidationMessageFor(model => model.Ad, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            
                            
                            <br />

                            <div class="form-group">
                                <div class="form-line">

                                    <label class="control-label">RIH:</label>
                                    @Html.EditorFor(model => model.RIH, new { htmlAttributes = new { @class = "form-control", required = "required", maxlength = "50" } })
                                    @Html.ValidationMessageFor(model => model.RIH, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">

                                <div class="checkbox">
                                    <input type="checkbox" id="isActive" name="isActive" value="true" />
                                    <label for="isActive">Aktiflik</label>
                                </div>
                            </div>
                            <div class="form-group">
                                <div>
                                    <input type="submit" value="Oluştur" class="btn btn-primary" />
                                    @Html.ActionLink("Geri Dön", "Index")
                                </div>
                            </div>
                        }
                    </div>

                    @if (ViewBag.result != null)
                    {
                        <h2><span class="label label-@(ViewBag.result[0]) col-sm-12">@(ViewBag.result[1])</span></h2>
                    }
                </div>
            </div>

        </div>
    </div>
</div>
<!-- #END# Input -->
@section  scripts{
    <script>
        $("#tip").val("@Model.AnketTipID").change();
    </script>
}
