@model IEnumerable<RmosCrmWebApp.Models.EntityClasses.AnketTipleri>
@{
    SelectList tipAd = ViewBag.AnketTipAd as SelectList;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hover Rows -->
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div id="alert_area"></div>
            <div class="header">
                <h2 class="col-sm-11">
                    ANKET TİPLERİ
                    <small>Anket tiplerini buradan ekleyebilir, güncelleyebilir ve silebilirsiniz.</small>
                </h2>
                <div class="col-sm-1">
                    <a href="@Url.Action("Create","SurveyTypes")" class="btn btn-success btn-circle  waves-effect waves-circle waves-float"><i class="material-icons">add</i></a>
                </div>
                <hr />
            </div>
            <div class="body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Anket Tip Kod</th>
                            <th>Ad</th>
                            <th>RIH</th>
                            <th>Aktiflik</th>
                            <th>Düzenle</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var con in Model)
                        {
                            <tr>
                                <td class="col-sm-4">@con.AnketTipKod</td>
                                @*<td class="col-sm-2">@(tipAd.FirstOrDefault(x => x.Value == con.AnketTipID.ToString()).Text)</td>*@
                                <td class="col-sm-4">@con.Ad</td>
                                <td class="col-sm-2">@con.RIH</td>
                                <td class="col-sm-2">@(con.Aktiflik==true?"Aktif":"Pasif")</td>
                                <td class="col-sm-4"><a href="@Url.Action("Edit","SurveyTypes",new {id= con.AnketTipID })" class="btn btn-warning btn-circle waves-effect waves-circle waves-float"><i class="material-icons">edit</i></a></td>
                                <td class="col-sm-4"><a href="@Url.Action("Delete","SurveyTypes",new {id= con.AnketTipID})" onclick="return confirm('Seçtiğiniz bilgiler silinecek! Emin misiniz?')" class="btn btn-danger btn-circle waves-effect waves-circle waves-float"><i class="material-icons">delete</i></a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- #END# Hover Rows -->
