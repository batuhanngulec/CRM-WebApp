@model RmosCrmWebApp.Models.EntityClasses.AltDepartmanlar

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Input -->
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    YENİ ALT DEPARTMAN
                    <small>Oluştur</small>
                </h2>
            </div>
            <div class="body">
                <div class="row clearfix">

                    <div class="col-sm-12">
                        @using (Html.BeginForm("Create", "SubDepartments", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(model => model.AltDepartmanID)
                            <div class="form-group">
                                <label class="control-label">Alt Departman Kodu:</label>
                                <div class="form-line">
                                    @Html.EditorFor(model => model.AltDepartmanKod, new { htmlAttributes = new { @class = "form-control", required = "required", maxlength = "50" } })
                                    @Html.ValidationMessageFor(model => model.AltDepartmanKod, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-line">

                                    <label class="control-label">Alt Departman  Adı:</label>
                                    @Html.EditorFor(model => model.Ad, new { htmlAttributes = new { @class = "form-control", required = "required", maxlength = "50" } })
                                    @Html.ValidationMessageFor(model => model.Ad, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="form-line">
                                    <label class="control-label">Bağlı Olduğu Departman:</label>
                                    @Html.DropDownListFor(model => model.DepartmanID, (SelectList)ViewBag.DepartmentID, new { @class = "form-control show-tick", required = "required" })
                                    @Html.ValidationMessageFor(model => model.Ad, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="form-line">
                                    <label class="control-label">Bağlı Olduğu Departman Kodu:</label>
                                    @Html.DropDownListFor(model => model.DepartmanKod, (SelectList)ViewBag.DepartmentsKod, new { @class = "form-control show-tick", required = "required" })
                                    @Html.ValidationMessageFor(model => model.DepartmanKod, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="form-line">
                                    <label class="control-label">Anket Sırası:</label>
                                    @Html.DropDownListFor(model => model.AnketSirasi, (SelectList)ViewBag.AnketSirasi, new { @class = "form-control show-tick", required = "required" })
                                    @Html.ValidationMessageFor(model => model.AnketSirasi, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">

                                <div class="checkbox">
                                    <input type="checkbox" id="isActive" name="isActive" value="true" />
                                    <label for="isActive">Aktiflik</label>
                                </div>
                            </div>
                            <div class="form-group">
                                <div>
                                    <input type="submit" value="Oluştur" class="btn btn-primary" />
                                    @Html.ActionLink("Geri Dön", "Index")
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- #END# Input -->
@section page_script{
    <script src="~/Scripts/js/pages/forms/basic-form-elements.js"></script>
}
