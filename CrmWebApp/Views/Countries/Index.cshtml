@model IEnumerable<RmosCrmWebApp.Models.EntityClasses.Ulkeler>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hover Rows -->
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div id="alert_area"></div>
            <div class="header">
                <h2 class="col-sm-11">
                    ÜLKELER
                    <small>Program Ülkeleri</small>
                </h2>
                <div class="col-sm-1">
                    <a href="@Url.Action("Create","Countries")" class="btn btn-success btn-circle  waves-effect waves-circle waves-float"><i class="material-icons">add</i></a>
                </div>
                <hr />
            </div>
            <div class="body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Ülke Kodu</th>
                            <th>Ülke Adı</th>
                            <th>Aktiflik</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var con in Model)
                        {
                            <tr>
                                <td class="col-sm-6">@con.UlkeKod</td>
                                <td class="col-sm-6">@con.Ad</td>
                                <td class="col-sm-6">@(con.Aktiflik==true?"Aktif":"Pasif")</td>
                                <td class="col-sm-6"><a href="@Url.Action("Edit","Countries",new {id= con.UlkeID })" class="btn btn-warning btn-circle waves-effect waves-circle waves-float"><i class="material-icons">edit</i></a></td>
                                <td class="col-sm-6"><a href="@Url.Action("Delete","Countries",new {id= con.UlkeID })" onclick="return confirm('Seçtiğiniz bilgiler silinecek! Emin misiniz?')" class="btn btn-danger btn-circle waves-effect waves-circle waves-float"><i class="material-icons">delete</i></a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- #END# Hover Rows -->
