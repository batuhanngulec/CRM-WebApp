@model RmosCrmWebApp.Models.EntityClasses.Cevaplar
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    YENİ CEVAPLAR
                    <small>Oluştur</small>
                </h2>
            </div>
            <div class="body">
                <div class="row clearfix">
                    <div class="col-sm-12">
                        @using (Html.BeginForm("Create", "Answers", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-line">
                                <label class="control-label">Cevap Kodu:</label>
                                <div class="form-line">
                                    @Html.EditorFor(model => model.CevapKod, new { htmlAttributes = new { @class = "form-control", required = "required", maxlength = "50" } })
                                    @Html.ValidationMessageFor(model => model.CevapKod, "", new {@class = "text-danger" })
                                </div>
                            </div>
                            <br />
                            <div class="form-group">
                                <div class="form-line">

                                    <label class="control-label">Cevap Set Sırası:</label>
                                    @Html.EditorFor(model => model.SetSirasi, new { htmlAttributes = new {@placeholder="Lütfen Set Sırasını Takip Ediniz", @class = "form-control", required = "required", maxlength = "50" } })
                                    @Html.ValidationMessageFor(model => model.SetSirasi,"", new {@class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="form-line">
                                    @foreach (var item in (SelectList)ViewBag.DilAdlar)
                                    {
                                        <label class="control-label">@item.Text</label>
                                        <input type="hidden" name="dil" value="@item.Value" />
                                        <input class="form-control text-box single-line" id="Dil" name="ceviri" type="text" value="" required placeholder="Buraya Yazınız.." />

                                    }
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="checkbox">
                                    <input type="checkbox" id="isActive" name="isActive" value="true" />
                                    <label for="isActive">Aktiflik</label>
                                </div>
                            </div>
                            <div class="form-group">
                                <div>
                                    <input type="submit" value="Oluştur" class="btn btn-primary" />
                                    @Html.ActionLink("Geri Dön", "Index")
                                </div>
                            </div>
                        }
                    </div>

                @if (ViewBag.result != null)
                {
                    <h2><span class="label label-@(ViewBag.result[0]) col-sm-12">@(ViewBag.result[1])</span></h2>
                }
                </div>
            </div>

        </div>
    </div>
</div>
<!-- #END# Input -->
